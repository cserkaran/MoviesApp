<!DOCTYPE html>
<html lang="en" ng-app="moviesApp" ng-controller="MoviesAppController">
<head>
    <meta charset="utf-8" />
    <title>Book My Movie</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,‌​100italic,300,300ita‌​lic,400italic,500,50‌​0italic,700,700itali‌​c,900italic,900' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/angular.min.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-animate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-aria.min.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-material.min.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-material-icons.min.js" type="text/javascript"></script>
    <script src="~/Scripts/promise.any.js" type="text/javascript"></script>
    <script src="~/Scripts/app/types.js" type="text/javascript"></script>
    <script src="~/Scripts/app/enums.js" type="text/javascript"></script>
    <script src="~/Scripts/app/moviesController.js" type="text/javascript"></script>
    <script src="~/Scripts/app/movieService.js" type="text/javascript"></script>
    <script src="~/Scripts/app/moviesUrlService.js" type="text/javascript"></script>

    @Styles.Render("~/Content/css")
</head>
<body layout="row" ng-cloak>
    <div layout="column" flex>
        <div>
            <md-toolbar>
                <div class="md-toolbar-tools">
                    <ng-md-icon id="toolBarIcon" icon="movie"
                                style="fill: whitesmoke"
                                size="64"></ng-md-icon>
                    <h1>Book My Show</h1>
                </div>
            </md-toolbar>
        </div>

        <md-content id="content" flex md-show="!loading" ng-show="!loading">
            <div layout="row">
                <div layout="column" flex="70" flex-offset="15" flex-offset-xs="1">
                    <md-card ng-repeat="movie in movies">
                        <md-card-content>
                            <div layout="row">
                                <div flex="20" flex-offset="1" layout="column">
                                    <img src="~/images/{{movie.imageUrl}}.jpg" />
                                </div>
                                <div flex="80" flex-offset="10" layout="column">
                                    <span class="md-headline">{{movie.Title}}({{movie.Year}})</span>
                                    <span class="md-subhead">{{movie.Rated}}  {{movie.Runtime}} - {{movie.Genre}}</span>
                                    <p>
                                        {{movie.Plot}}
                                    </p>

                                    <div layout="row">
                                        <span>Metascore:</span>
                                        <span><b>{{movie.Metascore}}</b>/100</span>
                                    </div>

                                    <div layout="row">
                                        <span class="md-subhead"><b>Director:</b></span>
                                        <span class="md-subhead">{{movie.Director}}</span>
                                    </div>

                                    <div layout="row">
                                        <span class="md-subhead"><b>Writers:</b></span>
                                        <span class="md-subhead">{{movie.Writer}}</span>
                                    </div>

                                    <div layout="row">
                                        <span class="md-subhead"><b>Stars:</b></span>
                                        <span class="md-subhead">{{movie.Actors}}</span>
                                    </div>

                                    <div layout="row">
                                        <span class="md-subhead"><b>Language:</b></span>
                                        <span class="md-subhead">{{movie.Language}}</span>
                                    </div>

                                    <div layout="row">
                                        <span class="md-subhead"><b>Country:</b></span>
                                        <span class="md-subhead">{{movie.Country}}</span>
                                    </div>

                                    <div layout="row">
                                        <span class="md-subhead"><b>Awards:</b></span>
                                        <span class="md-subhead">{{movie.Awards}}</span>
                                    </div>

                                    <div layout="row">
                                        <span class="md-subhead"><b>Best Available Price:</b></span>
                                        <span class="md-subhead">${{movie.Price}}</span>
                                    </div>

                                </div>
                            </div>
                        </md-card-content>
                    </md-card>
                </div>
                <div></div>
            </div>
        </md-content>


        <div id="progressBar" layout="column" 
                              layout-align="center center" 
                              flex md-show="loading" ng-show="loading" >
            <div layout="row" layout-align="center center" >
                <md-progress-circular md-mode="indeterminate"></md-progress-circular>
                <span class="md-headline" id="loadingSpan">Loading...</span>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>
